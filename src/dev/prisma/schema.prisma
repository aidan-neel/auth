generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Add this to your prisma schema
model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  username      String
  password      String
  refreshTokens RefreshToken[]
}

model RefreshToken {
    id        Int    @id @default(autoincrement())
    token     String @unique
    user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    Int
    expiresAt DateTime
}